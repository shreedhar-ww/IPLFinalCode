@model List<IPL.Entity.BidQuestion>
@using IPL.Entity;
@{
    ViewBag.Title = "SetBidQuestions";
    Schedule match = ViewBag.MatchDetails;
}
<input type="hidden" value="@match.Id" id="matchId">
<h3 class="page-title">@match.TeamA Vs. @match.TeamB</h3>
<div class="row">
    <div class="col-md-6">
        <!-- PANEL HEADLINE -->
        <div class="panel panel-headline">
            <div class="panel-heading">
                <h3 class="panel-title">@match.TeamA</h3>
            </div>
            <div class="panel-body">
                <table class="table table-condensed TeamA">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Bid Point</th>
                            <th>Is Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BidQuestion question in Model.Where(b => b.Team == "A"))
                        {
                            <tr id="@question.bidId">
                                <td>
                                    @question.bidQuestion
                                </td>
                                <td>
                                    <input type="text" class="bidPoint" value="@question.BidPoint" />
                                </td>
                                <td>
                                    <label class="fancy-checkbox">
                                        <input type="checkbox" checked="@question.IsBidActive"><span></span>
                                    </label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END PANEL HEADLINE -->
    </div>
    <div class="col-md-6">
        <!-- PANEL NO PADDING -->
        <div class="panel panel-headline">
            <div class="panel-heading">
                <h3 class="panel-title">@match.TeamB</h3>
            </div>
            <div class="panel-body">
                <table class="table table-condensed TeamB">
                    <thead>
                        <tr>
                            <th>Question</th>
                            <th>Bid Point</th>
                            <th>Is Active</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BidQuestion question in Model.Where(b => b.Team == "B"))
                        {
                            <tr id="@question.bidId">
                                <td>
                                    @question.bidQuestion
                                </td>
                                <td>
                                    <input type="text"  class="bidPoint" value="@question.BidPoint"/>
                                </td>
                                <td>
                                    <label class="fancy-checkbox">
                                        <input type="checkbox" checked="@question.IsBidActive"><span></span>
                                    </label>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END PANEL NO PADDING -->
    </div>  
</div>
<div class="row">
    <div class="col-md-12">
        <a class="btn btn-primary pull-left" href="/IPL/Schedule">Back</a>
        <button class="btn btn-primary pull-right" onclick="fn_SetQuestions()">Submit</button>
    </div>
</div>
@section Scripts{
<script src="~/Scripts/customjs/Schedule.js"></script>
}